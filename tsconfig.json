{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./", // Root directory for input files
    "baseUrl": "./src", // Base directory to resolve non-relative module names
    "esModuleInterop": true, // Enables emit for default imports from modules with no default export
    "allowSyntheticDefaultImports": true, // Allows default imports from modules with no default export
    "forceConsistentCasingInFileNames": true, // Ensures casing is consistent in imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "noEmitOnError": true // Prevents emitting files if any type checking errors are reported
  },
  "include": [
    "./**/*.ts" // Include all TypeScript files in the project
  ],
  "exclude": [
    "node_modules", // Exclude node_modules folder
    "**/*.spec.ts" // Optionally exclude test files if any
  ]
}
